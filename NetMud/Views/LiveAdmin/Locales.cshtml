@model NetMud.Models.Admin.LiveLocalesViewModel
@{
    ViewBag.Breadcrumbs = new Tuple<string, string[], string[]>("Live Locales", new string[] { "Dashboard" }, new string[] { "/GameAdmin" });

    var linkText = Html.ActionLink("99999999", "Locale", new { birthMark = 88888888 }).ToString();
    var tableColumns = new Dictionary<string, Func<dynamic, string>>();
    tableColumns.Add("Name", obj => linkText.Replace("99999999", obj.TemplateName).Replace("88888888", obj.BirthMark));
    tableColumns.Add("Birth", obj => obj.Birthdate.ToString());
}

@Html.Partial("LiveListTable", new NetMud.Models.ListTableViewModel() { Columns = tableColumns, Values = Model.CurrentPageOfItems, PagingModel = Model, EntityTypeName = "Locale" })

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
