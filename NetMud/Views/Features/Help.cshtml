@model NetMud.Models.Features.HelpViewModel
@{
    ViewBag.Breadcrumbs = new Tuple<string, string[], string[]>("Help Files", new string[] { "Home" }, new string[] { "/" });
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Help", "Features", FormMethod.Post, new { id = "paginationForm" }))
{
    <div class="itemsTable">
        <div class="itemsTableList" style="display: block;">
            @Html.DisplayFor(m => m.Items)
        </div>
        <div class="itemsTableSidebar">
            <div class="sideBarFilter">
                <div class="form-group row">
                    @Html.EditorFor(m => m.IncludeInGame)
                </div>
                <div class="form-group row">
                    @Html.EditorFor(m => m.SearchTerm)
                </div>
                <div class="form-group row submitButtons">
                    <input type="submit" value="Search" class="btn btn-default save" />
                </div>
            </div>
        </div>
    </div>
}