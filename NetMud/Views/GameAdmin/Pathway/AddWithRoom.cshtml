@model NetMud.Models.Admin.AddPathwayWithRoomTemplateViewModel

<section id="newPathwayWithRoomForm">
    @using (Html.BeginForm("AddWithRoom", "Pathway", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            @Html.EditorFor(m => m.Origin, new { validItems = Model.ValidRooms, disabled = true })
            <label id="lblDestination" class="col-sm-1 col-form-label">to</label>
            <h4 class="col-sm-2">NEW ROOM</h4>
        </div>

        <div class="form-group row">
            <h3>Pathway</h3>
            @Html.EditorFor(m => m.CreateReciprocalPath)
        </div>
        <hr />
        @Html.EditorFor(m => m.DataObject, "PathwayWithNewRoom", new { ValidMaterials = Model.ValidMaterials, ValidModels = Model.ValidModels, ValidRooms = Model.ValidRooms })

        @Html.EditorFor(m => m.Destination, new { ValidMaterials = Model.ValidMaterials, ValidModels = Model.ValidModels, ValidRooms = Model.ValidRooms })

        @Html.Partial("SubmitButton", new NetMud.Models.SubmitButtonModel() { SubmitName = "Save", CancelName = "Cancel", ReturnAction = "Index", ReturnController = "Zone", ModalWindow = true })
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
