<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>netMUD</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jqueryui-css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.8.2/umd/popper.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.8.2/umd/popper-utils.js"></script>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/tooltip.js")
    @Scripts.Render("~/Scripts/HtmlUtilities.js")
    @Scripts.Render("~/Scripts/site.js")
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</head>
<body>
    <div>
        <p id="statusMessage" name="statusMessage" class="text-success">@ViewBag.StatusMessage</p>
        @RenderBody()
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            if ('@ViewBag.StatusMessage' == '' && GetQueryStringParams('Message') != '') {
                $('#statusMessage').html(GetQueryStringParams('Message'));
            }

            $('.helpTip').each(function () {
                HelpTipTutorial($(this), $(this).attr('title'));
            });
        });
    </script>
</body>
</html>
