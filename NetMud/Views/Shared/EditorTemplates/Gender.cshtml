@using NetMud.Data.Architectural.ActorBase

@model Gender

@{
    var archivedTemplate = ViewData["ArchiveTemplate"] as Gender;
}
<h4>Details</h4>
<div class="form-group row">
    @Html.EditorFor(m => m.Name, new { archivedValue = archivedTemplate?.Name ?? "" })
    @Html.EditorFor(m => m.Base, new { archivedValue = archivedTemplate?.Base ?? "" })
    @Html.EditorFor(m => m.Collective, new { archivedValue = archivedTemplate?.Collective ?? "" })
    @Html.EditorFor(m => m.Possessive, new { archivedValue = archivedTemplate?.Possessive.ToString() ?? "" })
</div>

<div class="form-group row">
    @Html.EditorFor(m => m.Feminine, new { archivedValue = archivedTemplate?.Feminine.ToString() ?? "" })
    @Html.EditorFor(m => m.Adult, new { archivedValue = archivedTemplate?.Adult.ToString() ?? "" })
    @Html.EditorFor(m => m.Child, new { archivedValue = archivedTemplate?.Child.ToString() ?? "" })
</div>

<div class="form-group row">
    @Html.EditorFor(m => m.HelpText, new { archivedValue = archivedTemplate?.HelpText.ToString() ?? "" })
</div>
