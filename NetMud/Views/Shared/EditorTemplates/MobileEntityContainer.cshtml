@using NetMud.Data.Architectural.EntityBase
@using NetMud.DataStructure.Architectural.ActorBase

@model EntityContainerData<IMobile>

@{
    var name = Model == null ? "" : Model.Name;
}

<div class="accordionWrapper">
    <h5>@name</h5>
    <div>
        <div class="form-group row">
            <a href="#" class="removeRow col-form-label" title="Remove this" onclick="javascript: $(this).parent().parent().parent().remove(); return false;">X</a>
            @Html.EditorFor(m => m.Name)
            @Html.EditorFor(m => m.CapacityVolume)
            @Html.EditorFor(m => m.CapacityWeight)
        </div>
    </div>
</div>