@using NetMud.DataStructure.Linguistic

@model HashSet<LexicalType>

@{
    var currentCount = Model.Count();
    var rowsName = ViewData.ModelMetadata.PropertyName + "Rows";
}

<div id="@rowsName" class="iterativeContainer">
    <div class="addRowContainer">
        <div>
            @Html.DescriptionFor(m => m)
            <a href="#" class="addRow btn" data-current-row="@currentCount" onclick="javascript:  replacePart(this, newWordType, @currentCount, '@rowsName'); return false;"><span class="addWord">Add Row</span></a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        @Html.EditorForMany(m => m, null, 0, "CollectionEnumDropDownListItem")
    }

</div>
<script type="text/javascript">
    var newWordType = decodeHtml('@Html.EmptyEditorForMany(m => m, null, currentCount, "CollectionEnumDropDownListItem")');
</script>

