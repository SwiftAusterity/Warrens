@using NetMud.Models
@using NetMud.DataStructure.Architectural.EntityBase

@model HashSet<IQuality>

@{
    var currentCount = Model.Count();
    var rowsName = ViewData.ModelMetadata.PropertyName + "Rows";
}

<div id="QualitiesRows" class="iterativeContainer">
    <div class="addRowContainer">
        <div>
            @Html.DescriptionFor(m => m)
            <a href="#" class="addRow btn" data-current-row="@currentCount" onclick="javascript: replacePart(this, newQuality, @currentCount, '@rowsName'); return false;"><span class="addWord">Add Row</span></a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        @Html.EditorForMany(m => m, null, 0, "Quality")
    }
</div>

<script type="text/javascript">
    var newQuality = decodeHtml('@Html.EmptyEditorForMany(m => m, null, currentCount, "Quality")');
</script>