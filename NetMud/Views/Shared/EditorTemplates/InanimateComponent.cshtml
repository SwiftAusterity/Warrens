@using NetMud.Data.Inanimate
@model InanimateComponent

@{
    var name = Model.Item == null ? "" : Model.Item.Name;
    var amount = Model.Amount.ToString();
}

<div class="accordionWrapper">
    <h5>@name : @amount</h5>
    <div>
        <div class="form-group row">
            <a href="#" class="removeRow col-form-label" title="Remove this" onclick="javascript: $(this).parent().parent().parent().remove(); return false;">X</a>
            @Html.EditorFor(m => m.Item, new { validItems = ViewData["ValidItems"] })
            @Html.EditorFor(m => m.Amount)
        </div>
    </div>
</div>