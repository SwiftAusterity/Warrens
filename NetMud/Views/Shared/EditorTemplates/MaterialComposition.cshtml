@using NetMud.Data.Architectural.EntityBase

@model MaterialComposition

@{ 
    var name = Model?.Material == null ? "" : Model.Material.Name;
    var comp = Model == null ? "" : Model.PercentageOfComposition.ToString();
}

<div class="accordionWrapper">
    <h5>@name : @comp%</h5>
    <div>
        <div class="form-group row">
            <a href="#" class="removeRow col-form-label" title="Remove this" onclick="javascript: $(this).parent().parent().parent().remove(); return false;">X</a>
            @Html.EditorFor(m => m.Material, new { validItems = ViewData["ValidMaterials"] })
            @Html.EditorFor(m => m.PercentageOfComposition)
        </div>
    </div>
</div>