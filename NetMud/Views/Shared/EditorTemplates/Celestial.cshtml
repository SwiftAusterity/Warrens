@using NetMud.Data.Gaia
@model Celestial

@{
    var archivedTemplate = ViewData["ArchiveTemplate"] as Celestial;
}

<h4>Details</h4>
<div class="form-group row">
    @Html.EditorFor(m => m.Name, new { archivedValue = archivedTemplate?.Name ?? "" })
    @Html.EditorFor(m => m.Luminosity, new { archivedValue = archivedTemplate?.Luminosity.ToString() ?? "" })
</div>
<div class="form-group row">
    @Html.EditorFor(m => m.HelpText, new { archivedValue = archivedTemplate?.HelpText?.ToString() ?? "" })
</div>
<h4>Movement</h4>
<div class="form-group row">
    @Html.EditorFor(m => m.OrientationType, new { archivedValue = archivedTemplate?.OrientationType.ToString() ?? "" })
    @Html.EditorFor(m => m.Apogee, new { archivedValue = archivedTemplate?.Apogee.ToString() ?? "" })
    @Html.EditorFor(m => m.Perigree, new { archivedValue = archivedTemplate?.Perigree.ToString() ?? "" })
    @Html.EditorFor(m => m.Velocity, new { archivedValue = archivedTemplate?.Velocity.ToString() ?? "" })
</div>
@Html.EditorFor(m => m.Model)
