@using NetMud.DataStructure.Inanimate
@model BodyPart

@{ 
    var name = Model == null ? "" : Model.Name;
    var partName = Model?.Part?.Item == null ? "" : Model.Part.Item.Name;
    var amount = Model?.Part == null ? "" : Model.Part.Amount.ToString();
}
<div class="accordionWrapper">
    <h5>@name : @partName : @amount</h5>
    <div>
        <div class="form-group row">
            <a href="#" class="removeRow col-form-label" title="Remove this" onclick="javascript: $(this).parent().parent().parent().remove(); return false;">X</a>
            @Html.EditorFor(m => m.Name)
            @Html.EditorFor(m => m.Part)
        </div>
    </div>
</div>