@using NetMud.Data.Gaia
@model GaiaTemplate
@{
    var archivedTemplate = ViewData["ArchiveTemplate"] as GaiaTemplate;
}
<h4>Details</h4>
<div class="form-group row">
    @Html.EditorFor(m => m.Name, new { archivedValue = archivedTemplate?.Name ?? "" })
    @Html.EditorFor(m => m.RotationalAngle, new { archivedValue = archivedTemplate?.RotationalAngle.ToString() ?? "" })
</div>
@Html.EditorFor(m => m.ChronologicalSystem)
<h4>Celestial Bodies</h4>
@Html.EditorFor(m => m.CelestialBodies, new { validItems = ViewData["ValidCelestials"] })
