@using NetMud.DataStructure.NPC
@model MerchandiseStock

@{ 
    var name = Model.Item == null ? "" : Model.Item.Item.Name;
    var rate = Model.Item == null ? "" : Model.Item.MarkRate.ToString();
    var quality = Model.Item == null ? "" : Model.Item.Quality;
}
<div class="accordionWrapper">
    <h5>@name : @rate : @quality</h5>
    <div>
        <div class="form-group row">
            <a href="#" class="removeRow col-form-label" title="Remove this" onclick="javascript: $(this).parent().parent().parent().remove(); return false;">X</a>
            @Html.EditorFor(m => m.Item, new { validItems = ViewData["ValidItems"] })
            @Html.EditorFor(m => m.Amount)
        </div>
    </div>
</div>